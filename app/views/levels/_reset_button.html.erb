<div class="reset">
  <%= link_to reset_level_path(level_id_or_zen), remote: true do %>
    <span class="glyphicon glyphicon-refresh"></span>
  <% end %>

  <%# move to bottom right corner, maybe %>
  <div>
    <% if @level.id == 9999 %>
      <%= link_to skip_zen_level_level_path('zen'), remote: true do %>
        <span class="glyphicon glyphicon-remove"></span>
      <% end %>
    <% end %>
  </div>

  <div class="options_btn" data-toggle='modal' data-target="#options_overlay">
    <span class="glyphicon glyphicon-th-large"></span>
  </div>
</div>


<div id="options_overlay" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">

        <div class="options_container">
          <span data-dismiss="modal" class="glyphicon glyphicon-remove close_options"></span>
          <div class="music_row">
            Music
            <%= render 'music_btn' %>
          </div>
          <div><%=link_to "Select Level", levels_path(chapter: (@level.id / 10) + 1), remote: true, class:  "select_level_btn" %></div>
        </div>

      </div>
    </div>
  </div>
</div>
