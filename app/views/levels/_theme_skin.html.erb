<style>
<% if level.id.between?(11,20) %>
  :root {
    --main-background-color: #1e488c;
    --complete-highlight-color: rgb(112, 159, 204);
  }
<% elsif level.id.between?(21,30) %>
    :root {
    --main-background-color: #6e845c;
    --complete-highlight-color: rgb(204, 206, 97);
  }
<% elsif level.id.between?(31,40) %>
    :root {
    --main-background-color: #580b59;
    --complete-highlight-color: rgb(119, 126, 168);
  }
<% elsif level.id.between?(41,50) %>
    :root {
    --main-background-color: black;
    --complete-highlight-color: rgb(104, 53, 53);
  }
<% end %>

<% if level.id == 50 %>
  .curr_word_letter:not(.complete) {
    width: 6vh;
    line-height: 6vh;
    font-size: 4.5vh;
  }
  .curr_word_letter_container {
    width: 6vh;
    height: 6vh;
  }
  .curr_word .complete {
    font-size: 7vh;
    width: 7vh;
    height: 7vh;
  }
<% end %>

</style>
