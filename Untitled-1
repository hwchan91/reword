common_dict = Dict.new('common')
dict = common_dict.dict.keys
File.open('transition_words.json','a') do {|line| line.puts "'{"}

dict.first(10).each do |word, index|
  w = Word.new(word)
  trans = w.transition_words
  File.open('transition_words.json','a') do {|line| line.puts "\t\"#{word}\": \"#{trans}\"#{"," unless index == dict.length - 1}"}
end

File.open('transition_words.json','a') do {|line| line.puts "}'"}